%div(ng-if="application")
  .app__header
    %h2.app__name
      {{application.name | translate}}
    .app__publisher
      {{application.vendor}}
    .app__short-description
      -# TODO: actual short description
      {{application.description | translate | truncate:200}}

  .app__details
    .app_details__first
      .app__icon
        %img(ng-src="{{application.image}}")
    .app_details__second
      .app__rating
        Rating:
        =render "rating"
      -# Why do .app__languages and .language-list__language repeat?
      .app__languages
        Category
        -# TODO: m2m categories
        %ul.language-list
          %li.language-list__language {{application.category.name | translate}}
      .app__languages
        Languages
        %ul.language-list
          -# TODO: show full language names
          %li.language-list__language(ng-repeat="language in application.languages") {{language}}
      .app__languages
        Accessibility
        %ul.language-list
          %li.language-list__language Restricted Mobility
          %li.language-list__language Hearing
      .app__languages
        -# TODO: what is this?
        Web connection required
      .app__version
        -# TODO
        Version
        2.2.2.0
      .app__updated
        -# TODO
        Updated
        31.1.2014
    .app__platforms
      %ul.platform-list
        %li.platform-list__platform.platform-list__platform--ios
          %a.platform__download(a href="#") iOS
        %li.platform-list__platform.platform-list__platform--android
          %a.platform__download(a href="#") Android
        %li.platform-list__platform.platform-list__platform--windows
          %a.platform__download(a href="#") Windows
      .app__links
        .app__link.app-link--publisherwebsite
          -# TODO
          %a(href="#") Publisher Website &gt;&gt;
        .app-link.app-link--support
          %a(href="{{application.support_link}}") Support Website &gt;&gt;

  .app__long-description
    {{application.description | translate}}

  .app__screenshots
    #j-screenshots-carousel.carousel.slide(data-ride="carousel")
      <!-- Indicators -->
      %ol.carousel-indicators
        %li(data-target="#j-screenshots-carousel" data-slide-to="{{$index}}" ng-repeat="screenshot in application.screenshots" ng-class="{active: $index == 0}")

      <!-- Wrapper for slides -->
      .carousel-inner
        .item(ng-repeat="screenshot in application.screenshots" ng-class="{active: $index == 0}")
          %img(ng-src="{{ screenshot.image }}" alt="Screenshot")

      <!-- Controls -->
      %a.left.carousel-control(data-target="#j-screenshots-carousel" data-slide="prev")
        %span.glyphicon.glyphicon-chevron-left
      %a.right.carousel-control(data-target="#j-screenshots-carousel" data-slide="next")
        %span.glyphicon.glyphicon-chevron-right

